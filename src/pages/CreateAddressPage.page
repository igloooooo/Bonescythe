<apex:page standardController="Address__c" standardStylesheets="true" extensions="CreateAddressPageCtrl">
    
    <apex:form > 
        <apex:pageBlock title="Address" mode="edit">
            <apex:pageMessages ></apex:pageMessages>
              <apex:pageBlockSection title="Information" columns="2">
                    <apex:inputField value="{!Address__c.Type__c}"/>
                    <apex:inputField value="{!Address__c.Address_For_Order__c}"/>
                    <apex:inputField value="{!Address__c.Address_ID__c}"/>
                    <apex:inputField value="{!Address__c.Street__c}"/>
                    <apex:inputField value="{!Address__c.Customer__c}"/>  
                    <apex:inputField value="{!Address__c.Suburb__c}"/>                 
                    <apex:inputField value="{!Address__c.Phone__c}"/>
                    <apex:inputField value="{!Address__c.State__c}"/>                   
                    <apex:inputField value="{!Address__c.Description__c}"/>                   
                    <apex:inputField value="{!Address__c.Postcode__c}"/>
                    <apex:inputhidden value="{!Address__c.Address_Key__c}"/>
                    <apex:inputField value="{!Address__c.Country__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
                <apex:commandButton action="{!cancel}" value="Cancel" immediate="true"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>